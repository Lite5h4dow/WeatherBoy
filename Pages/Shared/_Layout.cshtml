<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WeatherBoy</title>
    <script src="~/lib/semantic/semantic/semantic.min.js"></script>
    <link rel="stylesheet" href="~/lib/semantic/semantic.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="ui menu">
            <div class="ui container">
                <a class='item' asp-page='Weather'>testing</a>
                <div class="right menu">
                    <a class="item" asp-page='login'>Login</a>
                    <a class="item" asp-page='register'>Register</a>
                </div>
            </div>
        </div>
    </header>
    <div class="ui container">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - WeatherBoy - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
